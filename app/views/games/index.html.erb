<div class="container">
    <p id="notice"><%= notice %></p>

    <h1>Listing Games</h1>

    <table>
      <thead>
        <tr>
          <th>Winner</th>
          <th>Winner rank</th>
          <th>Loser</th>
          <th>Loser rank</th>
          <th>Played</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td><%= game.winner %></td>
            <td><%= game.wrank %></td>
            <td><%= game.loser %></td>
            <td><%= game.lrank %></td>
            <td><%= game.played %></td>
            <td><%= link_to 'Show', game %></td>
            <td><%= link_to 'Edit', edit_game_path(game) %></td>
            <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Game', new_game_path %>
</div>
